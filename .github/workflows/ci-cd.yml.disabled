    - name: ğŸš€ Deploy to Production
      run: |
        echo "ğŸŒŸ Deploying to production environment..."
        echo "Backend Image: ${{ needs.build-images.outputs.backend-image }}"
        echo "Frontend Image: ${{ needs.build-images.outputs.frontend-image }}"
        
        # Ici, vos commandes de dÃ©ploiement production
        # Exemple: kubectl apply, AWS ECS, Azure Container Instances, etc.

    - name: ğŸŒ Run Production Health Check
      run: |
        echo "ğŸ¥ Running production health checks..."
        # curl -f https://comptaebnl-ia.com/health || exit 1
        # curl -f https://api.comptaebnl-ia.com/health || exit 1

    - name: ğŸ“Š Post-Deployment Monitoring
      run: |
        echo "ğŸ“Š Setting up post-deployment monitoring..."
        # Activation monitoring/alerting
        # Webhook vers services de monitoring

    - name: ğŸ’¬ Notify Production Deployment
      uses: 8398a7/action-slack@v3
      with:
        status: ${{ job.status }}
        channel: '#production'
        text: 'ğŸŒŸ ComptaEBNL-IA SUCCESSFULLY DEPLOYED TO PRODUCTION! ğŸ‰'
      env:
        SLACK_WEBHOOK_URL: ${{ secrets.SLACK_WEBHOOK }}
      if: success()

    - name: ğŸš¨ Notify Deployment Failure
      uses: 8398a7/action-slack@v3
      with:
        status: failure
        channel: '#alerts'
        text: 'ğŸš¨ PRODUCTION DEPLOYMENT FAILED! Immediate attention required.'
      env:
        SLACK_WEBHOOK_URL: ${{ secrets.SLACK_WEBHOOK }}
      if: failure()

  # ============================
  # POST-DEPLOYMENT TESTS
  # ============================
  post-deployment-tests:
    name: ğŸ§ª Post-Deployment Tests
    runs-on: ubuntu-latest
    needs: [deploy-production]
    if: github.ref == 'refs/heads/main' && success()

    steps:
    - name: ğŸ“¥ Checkout Code
      uses: actions/checkout@v4

    - name: ğŸŒ API Health Check
      run: |
        echo "ğŸ¥ Testing production API endpoints..."
        # curl -f https://api.comptaebnl-ia.com/health
