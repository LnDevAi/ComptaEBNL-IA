{
  "family": "comptaebnl-frontend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::{{AWS_ACCOUNT_ID}}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::{{AWS_ACCOUNT_ID}}:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "comptaebnl-frontend",
      "image": "{{ECR_URI}}/comptaebnl-frontend:{{ENVIRONMENT}}",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NGINX_HOST",
          "value": "localhost"
        },
        {
          "name": "NGINX_PORT",
          "value": "80"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 30
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/comptaebnl-frontend",
          "awslogs-region": "{{AWS_REGION}}",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "mountPoints": [],
      "volumesFrom": []
    }
  ],
  "volumes": [],
  "placementConstraints": [],
  "tags": [
    {
      "key": "Project",
      "value": "ComptaEBNL-IA"
    },
    {
      "key": "Environment",
      "value": "{{ENVIRONMENT}}"
    },
    {
      "key": "Component",
      "value": "Frontend"
    }
  ]
}